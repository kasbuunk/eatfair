<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-test="restaurant-dashboard">
  <!-- Header with Restaurant Info and Status -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= if @restaurant.image_url do %>
          <img 
            src={@restaurant.image_url} 
            alt={@restaurant.name}
            class="w-16 h-16 rounded-lg object-cover mr-4"
          />
        <% else %>
          <div class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center mr-4">
            <.icon name="hero-building-storefront" class="w-8 h-8 text-gray-400" />
          </div>
        <% end %>
        
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @restaurant.name %></h1>
          <p class="text-gray-600"><%= @restaurant.address %></p>
          <%= if @restaurant.description do %>
            <p class="text-gray-500 mt-1"><%= @restaurant.description %></p>
          <% end %>
        </div>
      </div>
      
      <!-- Status Toggle -->
      <div class="flex items-center space-x-4">
        <%= if @restaurant.is_open do %>
          <div class="flex items-center" data-test="restaurant-status-open">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
            <span class="text-green-700 font-semibold">Open</span>
          </div>
        <% else %>
          <div class="flex items-center" data-test="restaurant-status-closed">
            <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
            <span class="text-red-700 font-semibold">Closed</span>
          </div>
        <% end %>
        
        <button
          phx-click="toggle_status"
          data-test="toggle-restaurant-status"
          class={"px-4 py-2 rounded-md font-medium transition-colors #{if @restaurant.is_open, do: "bg-red-100 text-red-700 hover:bg-red-200", else: "bg-green-100 text-green-700 hover:bg-green-200"}"}
        >
          <%= if @restaurant.is_open, do: "Close Restaurant", else: "Open Restaurant" %>
        </button>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <.icon name="hero-clock" class="w-8 h-8 text-blue-500 mr-3" />
        <div>
          <p class="text-2xl font-semibold text-gray-900"><%= @restaurant.avg_preparation_time || 30 %> min</p>
          <p class="text-gray-600">Average prep time: <%= @restaurant.avg_preparation_time || 30 %> minutes</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <.icon name="hero-currency-euro" class="w-8 h-8 text-green-500 mr-3" />
        <div>
          <p class="text-2xl font-semibold text-gray-900">â‚¬<%= Decimal.to_string(@restaurant.min_order_value || Decimal.new("0")) %></p>
          <p class="text-gray-600">Minimum order</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <.icon name="hero-map-pin" class="w-8 h-8 text-purple-500 mr-3" />
        <div>
          <p class="text-2xl font-semibold text-gray-900"><%= @restaurant.delivery_radius_km || 5 %> km</p>
          <p class="text-gray-600">Delivery radius</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center">
        <.icon name="hero-star" class="w-8 h-8 text-yellow-500 mr-3" />
        <div>
          <p class="text-2xl font-semibold text-gray-900">
            <%= if @restaurant.rating, do: Decimal.to_string(@restaurant.rating), else: "New" %>
          </p>
          <p class="text-gray-600">Rating</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Action Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Menu Management -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Menu Management</h2>
        <.icon name="hero-book-open" class="w-6 h-6 text-gray-400" />
      </div>
      
      <p class="text-gray-600 mb-4">
        Create and manage your menu items, set prices, and control availability.
      </p>
      
      <div class="flex space-x-3">
        <.link
          href={~p"/restaurant/menu"}
          data-test="manage-menus-link"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          <.icon name="hero-pencil-square" class="w-4 h-4 mr-2" />
          Manage Menus
        </.link>
        
        <.link
          href={~p"/restaurant/menu/new"}
          class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors"
        >
          <.icon name="hero-plus" class="w-4 h-4 mr-2" />
          Add Menu Item
        </.link>
      </div>
    </div>
    
    <!-- Restaurant Profile -->
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Restaurant Profile</h2>
        <.icon name="hero-building-storefront" class="w-6 h-6 text-gray-400" />
      </div>
      
      <p class="text-gray-600 mb-4">
        Update your restaurant information, hours, and operational settings.
      </p>
      
      <div class="flex space-x-3">
        <.link
          href={~p"/restaurant/profile/edit"}
          data-test="edit-profile-link"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          <.icon name="hero-cog-6-tooth" class="w-4 h-4 mr-2" />
          Edit Restaurant
        </.link>
      </div>
    </div>
  </div>

  <!-- Analytics Section (Future Enhancement) -->
  <div class="bg-white shadow rounded-lg p-6" data-test="analytics-section">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Business Analytics</h2>
      <.icon name="hero-chart-bar-square" class="w-6 h-6 text-gray-400" />
    </div>
    
    <div class="text-center py-8">
      <.icon name="hero-chart-pie" class="w-16 h-16 text-gray-300 mx-auto mb-4" />
      <p class="text-gray-500 text-lg mb-2">Analytics coming soon!</p>
      <p class="text-gray-400">
        We're building powerful insights to help you understand your customers and grow your business.
      </p>
    </div>
  </div>

  <!-- Inspiration Footer -->
  <div class="mt-12 text-center">
    <div class="bg-gradient-to-r from-blue-50 to-green-50 rounded-lg p-8">
      <h3 class="text-2xl font-semibold text-gray-900 mb-2">
        ðŸŽ‰ You're Empowering Your Community!
      </h3>
      <p class="text-gray-600 mb-4">
        Every order through EatFair means you keep 100% of your revenue while building direct relationships with your customers.
      </p>
      <div class="flex justify-center space-x-6 text-sm text-gray-500">
        <span>âœ“ Zero Commission Fees</span>
        <span>âœ“ Own Your Customer Data</span>
        <span>âœ“ Build Your Brand</span>
        <span>âœ“ Community First</span>
      </div>
    </div>
  </div>
</div>
